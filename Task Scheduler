class Solution:
    def leastInterval(self, tasks: List[str], n: int) -> int:
        c=Counter(tasks)
        max_freq=max(c.values())
        max_freq_tasks=sum(1 for count in c.values() if count==max_freq)
        interval=(max_freq-1)*(n+1)+max_freq_tasks
        return max(interval, len(tasks))
